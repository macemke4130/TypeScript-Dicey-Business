{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "lib":[
        "es2015", "dom"
    ]
  },
  "exclude": [
      "node_modules"
  ]
}

